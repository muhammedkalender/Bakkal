<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/svSubCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/glSubCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="@integer/column_count"
            android:rowCount="@integer/row_count">

        </GridLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/svCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <GridLayout
            android:id="@+id/glCategory"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="@integer/column_count"
            android:rowCount="@integer/row_count"></GridLayout>
    </ScrollView>
</RelativeLayout>